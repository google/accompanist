<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AccompanistSample" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/deep_orange_300</item>
        <item name="colorPrimaryDark">@color/deep_orange_600</item>
        <item name="colorAccent">@color/pink_a200</item>
    </style>

    <style name="Theme.AccompanistSample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AccompanistSample.NoActionBar.TransparentBars">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>
